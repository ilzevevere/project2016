<div class="col-sm-12">
	<div class="row">
		<div class="col-sm-4">
			<%= image_tag "#{match.avatar}", size: "30x30" %>
		</div>
		<div class="col-sm-8">
			<div class="row">
				<div class="col-sm-4">
					<b>Name:</b>
				</div>
				<div class="col-sm-8">
					<%= link_to match.name, profile_user_path(match.id) %>
				</div>
				<div class="col-sm-4">
					<b>Matched:</b>
				</div>
				<div class="col-sm-8">
					<%= match.updated_at.strftime('%m/%d/%Y') %>
				</div>
				<div class="col-sm-4">
					<b>Message:</b>
				</div>
				<div class="col-sm-8">
					<%= link_to matches_get_email_path(id: "#{match.id}"), :data => {toggle: "tooltip", placement: "top" }, title: "Get Email", remote: :true  do %>
						<i class="fa fa fa-envelope"></i>
					<% end %>
				</div>
				<div class="col-sm-4">
					<b>Delete:</b>
				</div>
				<div class="col-sm-8">
					<%= link_to delete_friendship_path(friend_id: match.id), :data => {toggle: "tooltip", placement: "top", confirm: "Are you sure you want to unmatch with #{match.name} ?" }, title: "Unmatch", id: "delete_friendship", method: :delete do %>
						<i class="fa fa fa-times"></i>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>


